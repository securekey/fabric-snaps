{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Request Schema",
    "description": "Some product",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for a product",
            "type": "string"
        },
        "name": {
            "description": "Name of the product",
            "type": "string"
        },
        "story": {
            "description": "Product story",
            "type": "string"
        }
    },
    "required": ["id", "name"]
}